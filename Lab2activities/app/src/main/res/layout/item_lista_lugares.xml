<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/lugares_lista_mainlayout"
    >

    <ImageView
        android:layout_width="116dp"
        android:layout_height="87dp"
        android:id="@+id/fotoPrincipalLugar"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="10"
            >

            <TextView
                android:id="@+id/texto_ppal_nombre"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Nombre"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texto_ppal_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="DescripciÃ³n corta..."

                android:textAppearance="?android:attr/textAppearanceSmall" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:orientation="horizontal"

                >
                <ImageView
                    android:id="@+id/star1ListPlaces"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_border"

                    />
                <ImageView
                    android:id="@+id/star2ListPlaces"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_border"/>
                <ImageView
                    android:id="@+id/star3ListPlaces"
                    android:layout_margin="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_border"/>
                <ImageView
                    android:id="@+id/star4ListPlaces"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_border"/>
                <ImageView
                    android:id="@+id/star5ListPlaces"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_border"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/icono_indicador_derecho"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_keyboard_arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>